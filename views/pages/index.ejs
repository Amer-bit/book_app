<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book App</title>
    <link rel="stylesheet" href="/styles/reset.css" />
    <link rel="stylesheet" href="/styles/base.css" />
  </head>
  <body>
    <header>
        <%- include('../layout/header') %> 
      <p> No of Books <%= sqldata.length %> </p>
    </header>
    <main>
      <section>
        <% sqldata.forEach(value => { %>
        <div>
          <img src="<%= value.img_url %>" />
          <p><%= value.title %></p>
          <p><%= value.author %></p>
          <a href="/books/<%= value.id %> ">View Details</a>
        </div>
        <% }) %>
      </section>
    </main>
  </body>
</html>
